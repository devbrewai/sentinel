# App settings
API_V1_STR=/api/v1
PROJECT_NAME="Sentinel API"

# Redis connection
# Default: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Postgres Database
# These variables are used by docker-compose to initialize the DB
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=fraud_detection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
# Database connection string
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://user:password@localhost:5432/fraud_detection

# Model Artifacts 
# Paths are relative to the project root where the API is executed
MODEL_PATH=packages/models/fraud_baseline_v1.txt
SCREENER_PATH=packages/models/sanctions_screener.pkl

# Feature registry path
FEATURE_REGISTRY_PATH=data_catalog/processed/feature_registry.json
